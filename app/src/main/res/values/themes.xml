<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stock" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/mBottomSheetDialogTheme</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Choice</item>

    </style>

    <style name="Theme.Stock.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Stock.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Stock.Item.TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="Theme.Stock.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="fabSize">mini</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="mBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/mBottomSheetStyle</item>
    </style>

    <style name="mBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">1500dp</item>
    </style>


    <style name="Theme.Stock.Texts" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="Theme.Stock.Item.MaterialTextView.Search" parent="Theme.Stock.Texts">
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.Stock.Item.MaterialTextView.Index" parent="Theme.Stock.Texts">
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.Stock.Trade.Symbol" parent="Theme.Stock.Texts">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="Theme.Stock.Trade.Diff" parent="Theme.Stock.Texts">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="Theme.Stock.Trade.Desc" parent="Theme.Stock.Texts">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="Theme.Stock.Buttons" parent="Widget.MaterialComponents.Button">
        <item name="background">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Stock.Trade.Button" parent="Theme.Stock.Buttons">
        <item name="android:minHeight">64dp</item>
    </style>

    <style name="Theme.Stock.Trade.Chips" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/trade_chip_color</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="android:textColor">@color/trade_chip_font_color</item>
    </style>


</resources>